@model IEnumerable<TheWorld.Models.Trip>
@{
    ViewBag.Title = "Trips";
}
@section Scripts{
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/js/app-trips.js"></script>
    <script src="~/js/tripsController.js"></script>
}

<div class="row" ng-app="app-trips">

    @*<div>{{ "A+B = " + (2+2) }}  </div>*@

    <div ng-controller="tripsController as viewModel" class="col-md-6 col-md-offset-3">
        <div class="text-danger" ng-show="viewModel.errorMessage"> {{viewModel.errorMessage}}</div>
        <div ng-show="viewModel.isBusy" class="text-center"><i class="fa fa-spinner fa-spin"></i>Loading...</div>
        <table class="table table-responsive table-striped">
                <tr ng-repeat="tripItem in viewModel.trips">
                    <td> {{ tripItem.name }} </td>
                    <td> {{ tripItem.createdDate | date:'MM-dd-yyyy' }} </td>
                    <td> <a href="#" class="btn btn-sm btn-primary">Manage</a></td>
                </tr>
            </table>


        <form novalidate name="newTripForm" ng-submit="viewModel.addTrip()">
            <div class="form-group">
                <label for="name">Trip Name</label>
                <input class="form-control" type="text" id="name" name="name" ng-model="viewModel.newTrip.name" required ng-minlength="5" />
                <span ng-show="newTripForm.name.$error.required" class="text-warning">Name is required</span>
                <span ng-show="newTripForm.name.$error.minlength" class="text-warning">Name at least 5 chars</span>
            </div>
            <div class="form-group">
                <input class="btn btn-success btn-sm" type="submit" ng-disabled="newTripForm.$invalid" /> <!--newTripForm.$invalid = if the form is invalid, disable the button-->
            </div>
        </form>
    </div>


    <h1>The World - @ViewBag.Title</h1>

    <div class="col-md-6">
        <!--<div class="col-md-6">-->
        <form>
            <div class="form-group">
                <label>Date</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Location</label>
                <input class="form-control" />
            </div>
            <div><input type="submit" value="Add" class="btn btn-success" /></div>
        </form>
    </div>

    <div class="col-md-6">
        <h2>The Map</h2>

        <ul>
            @foreach (var item in Model)
            {
                <li> @item.Name</li>
            }
        </ul>
    </div>

</div>